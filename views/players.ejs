<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Players | Pokemath' }) %>

<body>
    <%- include('partials/nav', { username }) %>

    <div class="players">
        <% for (let p of players) { %>
            <div class="player">
                <a href="/<%= p.username %>">
                    <p><%= p.username %></p>
                    <% if (p.top_type_1) { %>
                        <div class="type-badge <%= p.top_type_1 %>"><%= p.top_type_1 %></div>
                    <% } %>

                    <% if (p.top_type_2) { %>
                        <div class="type-badge <%= p.top_type_2 %>"><%= p.top_type_2 %></div>
                    <% } %>
                </a>
            </div>
        <% } %>
    </div>
</body>
</html>
